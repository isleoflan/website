  @use "../../style/abstracts" as *;
  .button {
    position: relative;
  }
  .progress {
    position: absolute;
    bottom: 0;
    left: 0;
    height: 100%;
    width: 100%;
    overflow: hidden;
    z-index: 0;

    &-inner {
      @include linear-gradient-yellow();
      @include skew-horizontal();

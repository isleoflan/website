---
// Component Imports
import MainHeader from "@components/MainHead.astro";
import Header from "@layouts/Header.astro";
import CardContent from "@layouts/CardContent.astro";
import Footer from "@layouts/Footer.astro";

import Scanner from "@content/cards/Scanner.astro";

const title = `Virenscann an der Isle of LAN`;
const description = `Virenscann an der Isle of LAN`;
const keywords = ["Virenscanner", "Isle of LAN", "Sulgen"];
const type = "website";
const canonicalURL = Astro.href;
---

<html lang="de">
  <head>
    <MainHeader {title} {description} keywords={keywords.join(", ")} image="" {type} {canonicalURL}
    />
  </head>
  <body>
    <Header />
    <CardContent>
      <Scanner />
    </CardContent>
    <Footer />
  </body>
</html>
